<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="info_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="info_heading1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="info_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:maxLines">100</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Цвет фона -->
        <item name="boxBackgroundColor">@color/pinky_less</item>
        <!-- Цвет рамки в неактивном состоянии -->
        <item name="boxStrokeColor">@color/pinky_less</item>
        <!-- Цвет рамки в активном состоянии -->
        <item name="hintTextColor">@color/gray_header</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/gray_header</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!-- Базовый стиль для FAB -->
    <style name="Widget.App.FAB" parent="Widget.MaterialComponents.FloatingActionButton">

    </style>

</resources>